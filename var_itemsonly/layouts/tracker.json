//sets the trackers layout
//more info: https://github.com/black-sliver/PopTracker/blob/master/doc/PACKS.md#layouts 
{
  "tracker_default": {
      "type": "container",
      "background": "#000000",
      "content": {
          "type": "dock",
          "dropshadow": true,
          "content": [
              {
                  "type": "dock",
                  "dock": "left",
                  "v_alignment": "stretch",
                  "content": [
                      {
                          "type": "group",
                          "header": "Items",
                          "dock": "top",
                          "margin": "0,0,3,0",
                          "content": {
                              "type": "layout",
                              "key": "Skills_Main_Progressives"
                          }
                      },
                      {
                          "type": "group",
                          "header": "Locations",
                          "dock": "top",
                          "margin": "0,0,3,0",
                          "content": {
                            "type": "layout",
                            "h_alignment": "center",
                            "v_alignment": "center",
                            "key": "Progressive_Locations"
                          }
                        },
                        {
                            "type": "group",
                            "header": "Enabled Factions & Sidequests",
                            "dock": "bottom",
                            "margin": "0,0,3,0",
                            "content": {
                                "type": "layout",
                                "h_alignment": "center",
                                "v_alignment": "center",
                                "key": "Faction_Sidequest_Enabled"
                            }
                          }
                  ]
              }
          ]
      }
  },
  "tracker_horizontal": {
      "type": "container",
      "background": "#000000",
      "content": {
          "type": "dock",
          "dropshadow": true,
          "content": [
              {
                  "type": "dock",
                  "dock": "left",
                  "v_alignment": "stretch",
                  "content": [
                      {
                          "type": "group",
                          "header": "Items",
                          "dock": "top",
                          "margin": "0,0,3,0",
                          "content": {
                              "type": "layout",
                              "key": "Skills_Main_Progressives"
                          }
                      },
                      {
                          "type": "group",
                          "header": "Locations",
                          "dock": "top",
                          "margin": "0,0,3,0",
                          "content": {
                            "type": "layout",
                            "h_alignment": "center",
                            "v_alignment": "center",
                            "key": "Progressive_Locations"
                          }
                        },
                        {
                            "type": "group",
                            "header": "Enabled Factions & Sidequests",
                            "dock": "bottom",
                            "margin": "0,0,3,0",
                            "content": {
                                "type": "layout",
                                "h_alignment": "center",
                                "v_alignment": "center",
                                "key": "Faction_Sidequest_Enabled"
                            }
                          }
                  ]
              }              
          ]
      }
  }
}